# GiHaNotis Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
# - Docker: DB_HOST is auto-set to 'db' by docker-compose.yml (no need to set here)
# - Native: Use 'localhost' or your PostgreSQL host
DB_HOST=localhost
DB_NAME=gihanotis
DB_USER=gihanotis_user
DB_PASSWORD=changeme123

# Admin Credentials (change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# Flask Configuration
# Generate a secure key: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-secure-random-key
FLASK_ENV=development
